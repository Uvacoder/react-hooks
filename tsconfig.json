{
  "compilerOptions": {
    "noEmit": true,
    "sourceMap": true,
    "esModuleInterop": true,
    "strict": true,
    "allowJs": true,
    "checkJs": false,
    "forceConsistentCasingInFileNames": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "suppressImplicitAnyIndexErrors": true,
    "module": "commonjs",
    "target": "esnext",
    "jsx": "react",
    "lib": ["dom", "dom.iterable", "esnext"],
    "baseUrl": "./"
  },
  "include": ["./ts/**/*"],
  "exclude": ["node_modules"]
}
