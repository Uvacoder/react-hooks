{
  "compilerOptions": {
    "noEmit": true,
    "sourceMap": true,
    "esModuleInterop": true,
    "strict": true,
    "allowJs": true,
    "checkJs": false,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noImplicitAny": true,
    "suppressImplicitAnyIndexErrors": true,
    "module": "esnext",
    "jsx": "react",
    "lib": ["dom", "dom.iterable", "esnext"],
    "baseUrl": "./",
    "importHelpers": true,
    "declaration": true,
    "rootDir": "./src",
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    "moduleResolution": "node",
    "paths": {
      "*": ["src/*", "node_modules/*"]
    }
  },
  "include": ["src", "test/*", "types"]
}
